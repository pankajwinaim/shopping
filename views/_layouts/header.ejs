<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>
    <%= title %>
  </title>
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
  <!-- <link rel="stylesheet" href="https://cdnjs.cloudfare.com/ajax/libs/fancybox/3.1.20/jquery.fancybox.min.css" /> -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">


  <link rel="stylesheet" href="/css/style.css" type="text/css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <style>
    .nav li {
      display: flex;
      color: white;
      font-size: 16px;
    }

    .adminName {
      text-decoration: none;
    }

    .max-display-size {
      max-width: 2400px;
      margin: auto;
      padding: 0px 30px;
    }
  </style>
</head>

<body>

  <div class="loaderbg">
    <div class="loaderinner">
      <h3>Redirecting to paypal by admin Pankaj Chauhan </h3>
      <img src="/images/ajax-loader.gif" alt="">
    </div>
  </div>
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Shopping Hubs</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="mynavbar">
        <ul class="navbar-nav me-auto">
          <% pages.forEach(function(page){ %>
            <% if (page.slug=="home" ) { %>
              <li class="nav-item"><a class="nav-link" href=" /">
                  <%= page.title %>
                </a></li>
              <% } else { %>
                <li class="nav-item"><a class="nav-link" href=" /<%=page.slug %>">
                    <%= page.title %>
                  </a></li>
                <% } %>
                  <% }); %>
        </ul>
        <ul class="navbar-nav d-flex">
          <li class="nav-item">
            <a class="nav-link" href="/cart/checkout">My Cart</a>
          </li>

          <% if(user) { %>
            <li class="nav-item">
              <a class="nav-link" href="#">Hi,<%= user.username %>
              </a>
            </li>
            <li>
              <a class="nav-link" href="/users/logout">logout</a>
            </li>
            <% } else { %>

              <li class="nav-item"> <a class="nav-link" href="/users/register">Register</a></li>
              <li class="nav-item"> <a class="nav-link" href="/users/login">Log In</a></li>
              <% } %>
                <!-- for admin page to show all pages -->
                <% if(user && user.admin==1) { %>
                  <li class="nav-item"><a class="nav-link" href="/admin/pages">Admin Area</a></li>
                  <% } %>
        </ul>
        <!-- <form class="d-flex">
          <input class="form-control me-2" type="text" placeholder="Search">
          <button class="btn btn-primary" type="button">Search</button>
        </form> -->
      </div>
    </div>
  </nav>

  <div class="max-display-size">
    <%- messages('messages', locals) %>

      <div class="row">
        <div class="col-sm-2 ml-5 mt-5 shadow px-5 py-2">
          <h3>Categories</h3>
          <hr>

          <ul class="list-group">
            <li class="list-group-item"><a href="/products">All products</a></li>
            <% categories.forEach(function(c) { %>
              <li class="list-group-item"><a href="/products/<%= c.slug %>">
                  <%= c.title %>
                </a>
              </li>
              <% }); %>
          </ul>
        </div>
        <div class="col-xs-12 col-md-10  px-5 py-2">