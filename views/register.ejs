<% include _layouts/header %>

   <div class=" bg-light px-2 py-1 mb-5 mt-1">
      <a class="clearcart btn btn-success float-end " href="/users/login">
         Login <i class="fa fa-sign-in" aria-hidden="true"></i>

      </a>
      <h1 class="page-title"><i class="fa fa-registered" aria-hidden="true"></i>
         Registration
      </h1>
   </div>



   <form class="row g-3" method="post" action="/users/register">
      <div class="col-12">
         <label for="">Email</label>
         <input type="email" class="form-control" name="email" placeholder="Email" required>
      </div>
      <div class="col-md-6">
         <label for="">Name</label>
         <input type="text" class="form-control" name="name" placeholder="Name" required>
      </div>
      <div class="col-md-6">
         <label for="">Username</label>
         <input type="text" class="form-control" name="username" placeholder="Username" required>
      </div>
      <div class="col-md-6">
         <label for="">Password</label>
         <input type="password" class="form-control" name="password" placeholder="Password" required>
      </div>
      <div class="col-md-6">
         <label for="">Confirm Password</label>
         <input type="password" class="form-control" name="password2" placeholder="Confirm Password" required>
      </div>

      <div class="gap-50">
         <i class="fa fa-check-circle-o"></i>
         <button type="submit" class="btn btn-dark px-5 float-end">Register </button>
      </div>
   </form>

